{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"sourceMap": true,
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"strictFunctionTypes": true,
		"moduleResolution": "node",
		"baseUrl": "./src",
		"paths": {
			"@src/*": ["./*"],
			"@input/*": ["./input/*"],
			"@parser/*": ["./parser/*"]
		}
	},
	"include": ["src/**/*"]
}
